<idea-plugin>
  <id>active_doc_plugin</id>
  <name>ActiveDoc</name>
  <version>4.0 Beta</version>
  <vendor email="smehrpou@gmu.edu" url="http://mason.gmu.edu/~smehrpou/">GMU DevUXD</vendor>

  <description><![CDATA[
  ActiveDocumentation Tool
  <br>
  This tool helps in validating code against design rules.
    ]]></description>

  <change-notes><![CDATA[
  The tool window in the plugin is not functional. Instead the plugin runs in background and is accessible in the browser immediately.
  The logic for mining rules is added.
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <project-components>
    <component>
      <implementation-class>FileChangeManager</implementation-class>
    </component>
  </project-components>

  <actions>
    <!-- Add your actions here -->
    <group id="actionGroup">
      <action id="FileChangeManager.contextMenuActions" class="contextMenuActions"
              text="ActiveDocumentation Feature Selection"
              description="ActiveDocumentation feature selection"/>
      <separator/>
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
    </group>
  </actions>
</idea-plugin>
