<idea-plugin>
  <id>active_doc_plugin</id>
  <name>ActiveDoc</name>
  <version>3.0 Beta</version>
  <vendor email="smehrpou@gmu.edu" url="http://devx.cs.gmu.edu/">GMU DevUXD</vendor>

  <description><![CDATA[
  ActiveDocumentation Tool
  <br>
  This tool helps in validating code against design rules.
    ]]></description>

  <change-notes><![CDATA[
  The tool is running spmf.jar file.
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="172.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <project-components>
    <component>
      <implementation-class>FileChangeManager</implementation-class>
    </component>
  </project-components>

  <actions>
    <group id="actionGroup">
      <action id="FileChangeManager.FeatureSelectionAction" class="FeatureSelectionAction"
              text="ActiveDocumentation Feature Selection"
              description="ActiveDocumentation feature selection"/>
      <action id="MineRulesForFileAction" class="MineRulesForFileAction" text="Mine Rules"
              description="Mine design rules for a specific file"/>
      <separator/>
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
    </group>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <postStartupActivity implementation="FileChangeManager"/>
  </extensions>
</idea-plugin>
